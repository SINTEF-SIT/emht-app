<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <fragment class="sintef.android.emht_app.fragments.RegistrationFragment"
        android:id="@+id/registrationFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <fragment class="sintef.android.emht_app.fragments.AssessmentFragment"
        android:id="@+id/assessmentFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <fragment class="sintef.android.emht_app.fragments.ActionsFragment"
        android:id="@+id/actionsFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>